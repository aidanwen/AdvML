    "=3: output: [18, 84] Increase of 22 from previous. \n",
    "=4: output: [18, 106] Increase of 22 from previous\n",
    "40 - 18 = 22\n",
    "62 - 18 * 2 = 26\n",
    "\n",
    "[1][0][0] = 0\n",
    "default: [5, 31]\n",
    "in0 = 0 (diff of 5): [0,26]\n",
    "    31 - 5 = 26 \n",
    "    26 - 5 = 11 (out1 - out0, out1 where [1][0][1] = 0 minus out1 where it = 1)\n",
    "in1 = 0 (diff of 7): [5, 17]\n",
    "    31 - 7 * 2 = 17\n",
    "    17 - 5 = 12 \n",
